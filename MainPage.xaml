<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avaliacaoPAM.MainPage">

    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Center">
            <Label
                Text="JOGO DA MOEDA"
                FontSize="60"
                />
            <Image
                x:Name="imagemMoeda"
                
                WidthRequest="100"
                />
            <Label
                x:Name="ValorSorteado"
                Text=""
                HorizontalOptions="Center"
                FontSize="100"
                />
            <Picker x:Name="SidesPicker" Title="Selecione cara ou coroa">
                <Picker.Items>
                    <x:String>cara</x:String>
                    <x:String>coroa</x:String>
                </Picker.Items>
            </Picker>
            <Button
                x:Name="RolarDado"
                Text="LANÇAR MOEDA "
                Clicked="rolarDados"
                />
            <Label
                x:Name="msgResult"
                Text="jogue a moeda para saber se acertou!"
                HorizontalOptions="Center"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
